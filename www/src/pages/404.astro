---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/main.scss";
---

<BaseLayout title="Perdu ?" description="Si je perdais mes mauvais souvenirs... Il ne me resterait presque plus rien de lui.">
	<main>
		<h1>Perdu ?</h1>
		<em>Peut-être cherchiez-vous autre chose ?</em>

		<a href="/">Retourner à l'accueil</a>
	</main>
</BaseLayout>

<style lang="scss">
	body {
		background-image: linear-gradient(to right, black, black), url("../images/hands.webp"); // the linear-gradient is a trick to have a flat color
		image-rendering: pixelated;
		backdrop-filter: blur(8px);

		main {
			width: 100vw;
			background-color: rgba(black, 0.6);
			text-align: center;
			padding: 0;

			h1 {
				margin-top: 5em;
			}

			a {
				margin-top: 2em;
				color: inherit;
			}
		}
	}
</style>
