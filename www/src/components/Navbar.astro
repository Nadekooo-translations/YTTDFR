---
const path = Astro.url.pathname;
---

<nav>
	<a class={path === '/' ? 'active' : ''} href="/">Accueil</a>
	<a class={path === '/jouer/' ? 'active' : ''} href="/jouer/">Jouer</a>
	<a class={path === '/contribuer/' ? 'active' : ''} href="/contribuer/">Contribuer</a>
	<a class={path === '/apropos/' ? 'active' : ''} href="/apropos/">Ã€ propos</a>
</nav>

<style lang="scss">
	@import "../styles/_colors.scss";
	@import "@fontsource-variable/handjet";

	nav {
		font-family: "Handjet Variable", system-ui;
		font-weight: 600;

		margin-top: 0;
		list-style: none;
		display: flex;

		text-wrap: nowrap;

		flex-direction: row;
		justify-content: space-evenly;

		@media (max-width: 1024px) {
			flex-direction: column;
			gap: 1ch;
		}

		a {
			user-select: none;
			text-decoration: none;
			color: white;
			font-size: 26px;

			padding: 0.1em 2em;
			background-color: $gray;
			border-style: double;
			border-width: 4px;
			height: min-content;

			transition: all 0.3s;

			@media (max-width: 1024px) {
				text-align: center;
			}

			&.active,
			&:hover {
				background-color: $brown;
				border-color: $gold;
			}
		}
	}
</style>
