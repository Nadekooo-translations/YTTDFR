---
const { progress, ...rest } = Astro.props;
---

<div class="progressbar" role="progressbar" {...rest}>
	<div class="front" style={{ width: `${progress}%` }}></div>
</div>

<style lang="scss">
	@import "../styles/_colors.scss";

	.progressbar {
		border-radius: 1em;
		background-color: $lightGray;
		width: 100%;
		height: 1em;

		.front {
			border-radius: 1em;
			background-color: $gold;
			height: 100%;
			min-width: 1em;

			animation: grow 2s cubic-bezier(.22,.61,.36,1);
		}
	}

	@keyframes grow {
		0% {
			width: 0%;
		}
		40% {
			width: 0%;
		}
		100% {}
	}
</style>
